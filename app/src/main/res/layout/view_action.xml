<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/customer_finish"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/close_customer_finish"
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:background="#a6000000">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Product page"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="26dp"
            android:textStyle="bold|italic" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="#000">

            <ImageView
                android:id="@+id/back_customer_activity_toggle"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="9dp"
                android:background="@null"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/back_icon_small_white" />

            <TextView
                android:id="@+id/customer_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_toRightOf="@+id/back_customer_activity_toggle"
                android:maxLines="1"
                android:paddingLeft="3dp"
                android:paddingRight="40dp"
                android:textAllCaps="false"
                android:textColor="#FFF"
                android:textSize="25dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/invoice_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="8dp"
                android:text="148"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="19dp"
                android:textStyle="bold|italic" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="140dp"
        android:background="#1072ba" />

    <RelativeLayout
        android:id="@+id/main_content_finished"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="141dp"
        android:background="#fff"
        android:padding="10dp">

        <TextView
            android:id="@+id/name_finished"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:paddingLeft="3dp"
            android:paddingRight="40dp"
            android:text="Informatie van het product "
            android:textAllCaps="false"
            android:textSize="16dp"
            android:textStyle="normal" />




    </RelativeLayout>

</RelativeLayout>