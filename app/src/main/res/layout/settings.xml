<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/customer_finish"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/network_name"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="0dp"
                android:hint="Netwerknaam"
                android:textSize="14dp"
                android:textColor="#222"/>

            <Button
                android:id="@+id/save_network_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Netwerknaam opslaan" />


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#aaa"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"/>

        <CheckBox
            android:id="@+id/level10"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="0dp"
            android:text="Level 10"
            android:textColor="#222" />

        <CheckBox
            android:id="@+id/level9"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="0dp"
            android:text="Level 9"
            android:textColor="#222" />

        <CheckBox
            android:id="@+id/level8"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Level 8"
            android:textColor="#222" />

        <CheckBox
            android:id="@+id/level7"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Level 7"
            android:textColor="#222" />

        <CheckBox
            android:id="@+id/level6"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Level 6"
            android:textColor="#222" />

        <CheckBox
            android:id="@+id/level5"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Level 5"
            android:textColor="#222" />

        <CheckBox
            android:id="@+id/level4"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Level 4"
            android:textColor="#222" />

        <CheckBox
            android:id="@+id/level3"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Level 3"
            android:textColor="#222" />

        <CheckBox
            android:id="@+id/level2"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Level 2"
            android:textColor="#222" />

        <CheckBox
            android:id="@+id/level1"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Level 1"
            android:textColor="#222" />

    <Button
        android:id="@+id/clear_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:layout_marginBottom="150dp"
        android:text="Gegevens wissen"
        android:layout_above="@+id/save_settings"/>

    <Button
        android:id="@+id/save_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:layout_marginLeft="-20dp"

        android:text="Instellingen opslaan"
        android:layout_below="@+id/clear_data"/>
    </LinearLayout>
</RelativeLayout>